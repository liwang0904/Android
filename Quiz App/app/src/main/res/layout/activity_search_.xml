<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="search_obj" type="com.abhiandroid.quizgameapp.activity.Search_Activity"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/category_bg_color"
        tools:context=".activity.Search_Activity">
        <com.abhiandroid.quizgameapp.views.MyAdView
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        </com.abhiandroid.quizgameapp.views.MyAdView>
    <RelativeLayout
        android:id="@+id/headrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
       >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:onClick="goBack"
            android:src="@drawable/back_icon2"
            android:background="@drawable/ripple_effect_btn_shape"
            />
        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:onClick="search"
            android:layout_alignParentRight="true"
            android:src="@drawable/search_icon"
            android:background="@drawable/ripple_effect_btn_shape"
            />
        <EditText
            android:id="@+id/search_view"
            android:background="@drawable/search_bg_shape"
            android:textSize="@dimen/_14sdp"
            android:layout_toRightOf="@+id/back"
            android:layout_toLeftOf="@+id/search"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="@string/search_hint"
            android:textColor="@android:color/white"
            android:padding="@dimen/_7sdp"
           style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
            />

    </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/searched_data_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headrer"
            android:layout_above="@+id/ad_view"
            android:descendantFocusability="blocksDescendants"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_categories"
                    style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
                    android:layout_below="@+id/search_toolbar"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    ></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/ll_load_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/load_more_icon"/>

                    <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:onClick="loadMore"
                        android:textColor="@android:color/white"
                        android:text="Load More"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@android:color/black"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <com.abhiandroid.quizgameapp.views.AllerRegularTextView
            android:id="@+id/tv_minimum_search_limit"
            style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
            android:text="@string/minimum_search_limit"
            android:textColor="@color/dialog_bg_color"
            android:gravity="center"/>
        <com.abhiandroid.quizgameapp.views.Internet_error_panel
            android:id="@+id/internet_error_panel"
            style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
            android:layout_below="@+id/headrer"
            android:visibility="gone"
            ></com.abhiandroid.quizgameapp.views.Internet_error_panel>
    </RelativeLayout>
</layout>

