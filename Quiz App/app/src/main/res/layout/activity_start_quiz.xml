<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="category" type="com.abhiandroid.quizgameapp.activity.StartQuizActivity"/>
    </data>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/play_quiz_bg_color"
                tools:context=".activity.StartQuizActivity">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:background="@drawable/quiz_play_header_background"
                        />
                    <RelativeLayout
                        android:id="@+id/header_panel"
                       android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        >
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:onClick="goBack"
                    android:src="@drawable/back_icon2"
                    />
                    <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                        android:id="@+id/tv_quizname"
                        style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                        android:text="@string/quiz_name"
                        android:textColor="@android:color/white"
                       android:layout_centerInParent="true"
                        />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/quiz_layout"
                        style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
                        android:layout_below="@+id/header_panel">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_quiz_image"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerHorizontal="true"
                        app:riv_border_width="@dimen/_2sdp"
                        android:src="@drawable/green_placeholder"

                        app:riv_oval="true"
                        app:riv_border_color="@android:color/white"
                        android:layout_marginTop="@dimen/_10sdp"/>
                        <LinearLayout
                            android:id="@+id/question_panel"
                            style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
                            android:layout_below="@+id/iv_quiz_image"
                            android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/quiz_detail_panel"
                       android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_height="match_parent">

                            <LinearLayout
                               style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                    <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                                        style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                                       android:text="@string/questions"
                                        android:gravity="center_horizontal"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:textColor="@color/dialog_bg_color"
                                        android:drawableTop="@drawable/question_icon"
                                        />
                                <com.abhiandroid.quizgameapp.views.AllerBoldTextView
                                    android:id="@+id/tv_total_questions"
                                    style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/_17sdp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="@dimen/_10sdp"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                                    style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                                    android:text="@string/best_score"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/_14sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColor="@color/dialog_bg_color"
                                    android:drawableTop="@drawable/trophy_icon"
                                    />
                                <com.abhiandroid.quizgameapp.views.AllerBoldTextView
                                    android:id="@+id/tv_best_score"
                                    style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/_17sdp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="@dimen/_10sdp"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardElevation="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                                    style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                                    android:text="@string/time"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/_14sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColor="@color/dialog_bg_color"
                                    android:drawableTop="@drawable/timer_icon"
                                    />
                                <com.abhiandroid.quizgameapp.views.AllerBoldTextView
                                    android:id="@+id/tv_quiz_time"
                                    style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/_17sdp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="@dimen/_10sdp"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_play_now"
                        style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
                        android:background="@drawable/ripple_effect_btn_shape"
                        android:layout_below="@+id/quiz_detail_panel"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        >
                    <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                        style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                        android:text="@string/play_now"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:drawableRight="@drawable/play_icon"
                        android:letterSpacing="0.2"
                        android:textSize="@dimen/_17sdp"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:layout_below="@+id/ll_play_now"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="followAction"
                            android:background="@drawable/ripple_effect_btn_shape"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            >
                        <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                            android:id="@+id/tv_follow"
                            style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:letterSpacing="0.2"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:drawableLeft="@drawable/follow_icon"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center_horizontal"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tv_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_effect_btn_shape"
                        android:gravity="center"
                        android:onClick="showInfo"
                        android:layout_marginLeft="@dimen/_10sdp"
                        >
                        <com.abhiandroid.quizgameapp.views.AllerRegularTextView

                           style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                            android:text="@string/info"
                            android:drawableLeft="@drawable/info_icon"
                            android:paddingTop="@dimen/_10sdp"

                            android:paddingBottom="@dimen/_10sdp"
                            android:letterSpacing="0.2"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center_horizontal"

                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                    </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <com.abhiandroid.quizgameapp.views.MyAdView
                        android:id="@+id/ad_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">
                    </com.abhiandroid.quizgameapp.views.MyAdView>



                    <LinearLayout
                        android:id="@+id/no_data_found_panel"
                        style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
                        android:layout_below="@+id/header_panel"
                        android:layout_above="@id/ad_view"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                            android:id="@+id/no_data_found"
                            style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
                            android:text="@string/no_question_added"
                            android:layout_below="@+id/header_panel"
                            android:layout_above="@id/ad_view"
                            android:padding="@dimen/_20sdp"
                            android:textColor="@color/dialog_bg_color"
                            android:gravity="center"/>
                        <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                            android:id="@+id/try_another_cat"
                            style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                            android:textColor="@android:color/holo_blue_dark"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/try_another_cat"/>
                    </LinearLayout>

                    <com.abhiandroid.quizgameapp.views.Internet_error_panel
                        android:id="@+id/internet_error_panel"
                        style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
                        android:layout_below="@+id/header_panel"
                        android:visibility="gone"
                        ></com.abhiandroid.quizgameapp.views.Internet_error_panel>
                </RelativeLayout>


            </RelativeLayout>
</layout>

