<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:id="@+id/relative_layout"
            style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
            android:background="?android:attr/selectableItemBackground"
            tools:background="@drawable/ripple_effect_recyclerview"
            android:padding="@dimen/_6sdp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/category_icon_size"
        android:layout_height="@dimen/category_icon_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher" />




            <ImageView
                android:id="@+id/iv_next_arrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/next_arrow"
                />
            <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                android:id="@+id/firstLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/icon"
                android:layout_toLeftOf="@+id/iv_next_arrow"
                android:gravity="center_vertical"
                android:text="Example application"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/category_txt_color"
                android:textSize="16sp" />
            <com.abhiandroid.quizgameapp.views.AllerRegularTextView
                android:id="@+id/secondLine"
                style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
                android:layout_below="@+id/firstLine"
                android:layout_alignLeft="@+id/firstLine"
                android:layout_toRightOf="@id/icon"
                android:layout_toLeftOf="@+id/iv_next_arrow"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/category_txt_color"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

