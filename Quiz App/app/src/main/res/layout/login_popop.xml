<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
    android:background="#80000000"
    >
    <RelativeLayout
        style="@style/AppTheme.MyTheme.Cordinates_Length.MM"
        android:background="@color/cardview_shadow_start_color"
        >
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_centerInParent="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:padding="@dimen/_5sdp"
        android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/warning_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>
        <ImageView
            android:id="@+id/close"
            style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
            android:src="@drawable/cross_icon"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_10sdp"/>
    <com.abhiandroid.quizgameapp.views.AllerRegularTextView
        android:id="@+id/textview"
      style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
        android:text="@string/login_txt"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_below="@+id/logo"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>
    <LinearLayout
        style="@style/AppTheme.MyTheme.Cordinates_Length.MW"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textview"
        >
        <ImageView
            android:id="@+id/tv_fb_login"
            style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/fb_login"
            />
        <Space
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tv_google_login"
            style="@style/AppTheme.MyTheme.Cordinates_Length.WW"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/google_login"
            />
    </LinearLayout>
</RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>
</RelativeLayout>

